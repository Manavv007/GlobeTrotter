# Database Configuration
MONGODB_URI=mongodb://localhost:27017/globe-trotter
MONGODB_URI_ATLAS=mongodb+srv://username:password@cluster.mongodb.net/globe-trotter

# Server Configuration
PORT=5001
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@globetrotter.com

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Gemini AI API
GEMINI_API_KEY=your-gemini-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
AUTH_RATE_LIMIT_MAX_REQUESTS=50
DISABLE_RATE_LIMIT=false

# Image Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Image Processing
MAX_IMAGE_SIZE=10485760
MAX_IMAGE_DIMENSION=4096
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/heic
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300
MEDIUM_SIZE=800
LARGE_SIZE=1200

# Upload Limits
MAX_FILES_PER_UPLOAD=10
MAX_UPLOAD_SIZE_PER_USER=52428800
UPLOAD_RATE_LIMIT=100

# Security
CORS_ORIGIN=http://localhost:3000
ENABLE_FILE_SCANNING=true
MAX_FILE_SIZE=10485760
