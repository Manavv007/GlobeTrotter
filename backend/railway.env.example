# Railway Production Environment Variables
# Copy these to your Railway dashboard environment variables

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=GlobeTrotter

# Server Configuration
PORT=5001
NODE_ENV=production
CLIENT_URL=https://your-frontend.vercel.app

# JWT Configuration (CHANGE THIS TO A SECURE RANDOM STRING)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRE=30d

# Email Configuration (Optional - for email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@globetrotter.com

# Google Places API (Optional - for location features)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Gemini AI API (Optional - for AI features)
GEMINI_API_KEY=your-gemini-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=20
DISABLE_RATE_LIMIT=false

# Image Upload Configuration (Optional - for image features)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Image Processing
MAX_IMAGE_SIZE=10485760
MAX_IMAGE_DIMENSION=4096
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/heic
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300
MEDIUM_SIZE=800
LARGE_SIZE=1200

# Upload Limits
MAX_FILES_PER_UPLOAD=10
MAX_UPLOAD_SIZE_PER_USER=52428800
UPLOAD_RATE_LIMIT=100

# Security
CORS_ORIGIN=https://your-frontend.vercel.app
ENABLE_FILE_SCANNING=true
MAX_FILE_SIZE=10485760
